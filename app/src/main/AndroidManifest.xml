<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.teacup">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FlashActivity"
            android:theme="@style/FlashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".BookDetailActivity" />
        <activity android:name=".WeatherActivity" />
        <activity android:name=".PhotoActivity" />
        <activity android:name=".ShowPhotoActivity"
            android:theme="@style/FlashTheme" />
        <activity android:name=".MusicDetailActivity" />
        <activity android:name=".MusicPlayActivity" />
        <activity android:name=".NewsDetailActivity" />
        <activity android:name=".ReadDetailActivity" />
        <activity android:name=".ReadTopicActivity" />
        <activity android:name=".ReadCollectionActivity" />

        <service android:name="com.app.service.LocationService" />
        <service android:name="com.app.service.MediaService" />
    </application>

</manifest>