<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hrb.library.MiniMusicView
        android:id="@+id/chl_music_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/muisic_detail_MiniMusicView_marginBottom"
        android:layout_marginTop="@dimen/muisic_detail_MiniMusicView_marginTop"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_ting_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/muisic_detail_type_marginBottom"
        android:layout_marginLeft="@dimen/muisic_detail_type_marginleft"
        android:textColor="@color/gray"
        android:textSize="@dimen/muisic_detail_type_textsize" />

    <LinearLayout
        android:id="@+id/tv_ting_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>