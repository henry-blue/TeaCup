<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <include layout="@layout/navigation_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_fanju_news_fl_marginTop">

        <include layout="@layout/common_recycler_view" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fanju_new_btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/layout_fanju_news_faBtn_marginBottom"
            android:layout_marginRight="@dimen/layout_fanju_news_faBtn_marginRight"
            android:src="@drawable/search"
            android:visibility="gone"
            app:backgroundTint="@color/yellow"
            app:borderWidth="0dp"
            app:elevation="@dimen/layout_fanju_news_faBtn_elevation"
            app:pressedTranslationZ="@dimen/layout_fanju_news_faBtn_translationZ"
            app:rippleColor="@color/deepYellow" />
    </FrameLayout>
</LinearLayout>