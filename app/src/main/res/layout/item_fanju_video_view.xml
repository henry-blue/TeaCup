<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="155dp"
    android:layout_marginBottom="@dimen/item_fanju_video_cv_marginBottom"
    android:layout_marginLeft="@dimen/item_fanju_video_cv_margin"
    android:layout_marginRight="@dimen/item_fanju_video_cv_margin"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardElevation="@dimen/item_video_view_elevation"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fanju_video_img"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/fanju_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/font_color"
            android:textSize="15sp"
            android:text="gehigueshig"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>