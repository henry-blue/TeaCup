<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photo_qiubai_layout_height"
    android:layout_margin="@dimen/photo_qiubai_layout_margin"
    app:cardCornerRadius="@dimen/item_find_fragment_cardCornerRadius"
    app:cardElevation="@dimen/item_find_fragment_cardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_qiubai_tip_height"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/photo_qiubai_tip_img_marginLeft"
                android:layout_width="@dimen/photo_qiubai_tip_img_width"
                android:layout_height="@dimen/photo_qiubai_tip_img_height"
                android:src="@drawable/photo_icon"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/photo_qiubai_tip_title_marginLeft"
                android:gravity="center_vertical"
                android:textSize="@dimen/photo_qiubai_tip_title_textsize"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_photo"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/photo_qiubai_photo_marginLeft"
                android:layout_marginBottom="@dimen/photo_qiubai_photo_marginBottom"
                android:layout_marginRight="@dimen/photo_qiubai_photo_marginRight"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_gif"
                android:src="@drawable/gif"
                android:layout_width="@dimen/photo_qiubai_gif_width"
                android:layout_height="@dimen/photo_qiubai_gif_height"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>