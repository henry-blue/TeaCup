<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_music_view_height"
    android:layout_marginBottom="@dimen/item_music_view_marginBottom"
    android:layout_marginLeft="@dimen/item_music_view_marginleft"
    android:layout_marginRight="@dimen/item_music_view_marginright"
    android:layout_marginTop="@dimen/item_music_view_marginTop"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardElevation="@dimen/item_music_view_elevation"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_music_img_height"
            android:scaleType="centerCrop"
            android:transitionName="@string/transition_music_img"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/item_music_view_title_textsize" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/item_music_view_img_width"
                    android:layout_height="@dimen/item_music_view_img_width"
                    android:src="@drawable/music_heart" />

                <TextView
                    android:id="@+id/tv_happy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_music_view_happy_marginLeft"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/item_music_view_happy_textsize" />

                <ImageView
                    android:layout_width="@dimen/item_music_view_img_width"
                    android:layout_height="@dimen/item_music_view_img_width"
                    android:layout_marginLeft="@dimen/item_music_view_img_marginleft"
                    android:src="@drawable/music_info" />

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_music_view_info_marginleft"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/item_music_view_happy_textsize" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>