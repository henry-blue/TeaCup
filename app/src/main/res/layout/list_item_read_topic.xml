<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_read_topic_height"
    android:layout_margin="@dimen/list_item_read_topic_margin" >

    <ImageView
        android:id="@+id/list_read_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_read_topic_ll_height"
        android:layout_gravity="bottom"
        android:background="@color/font_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_read_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="@dimen/list_item_read_topic_title_margin"
            android:textSize="@dimen/list_item_read_topic_title_size"/>

        <TextView
            android:id="@+id/list_read_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/list_item_read_topic_detail_size"/>
    </LinearLayout>

</FrameLayout>