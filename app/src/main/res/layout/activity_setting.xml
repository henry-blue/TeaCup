<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/navigation_toolbar" />

    <com.app.ui.SettingItemView
        android:id="@+id/siv_save_data_stream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setting_title="省流量模式"
        app:setting_content="仅在Wi-Fi环境下才会自动加载图片"/>

    <com.app.ui.SettingItemView
        android:id="@+id/siv_warm_data_stream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setting_title="流量模式下提醒" />

    <com.app.ui.SettingItemView
        android:id="@+id/siv_play_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setting_title="非WIFI模式下播放音乐" />

    <com.app.ui.SettingItemView
        android:id="@+id/siv_clean_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hide_checkbox="true"
        app:setting_title="清除缓存"
        app:setting_content="缓存大小 15KB"/>


</LinearLayout>

