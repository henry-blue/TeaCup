<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_muisic_detail_layout_height"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/item_muisic_detail_layout_padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_play_index"
        android:layout_width="@dimen/item_muisic_detail_index_width"
        android:layout_height="@dimen/item_muisic_detail_index_height"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/item_muisic_detail_index_textsize"/>

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_muisic_detail_rlayout_height">

        <ImageView
            android:id="@+id/iv_play_img"
            android:layout_width="@dimen/item_muisic_detail_img_width"
            android:layout_height="@dimen/item_muisic_detail_img_height" />
        <TextView
            android:id="@+id/tv_play_name"
            android:layout_toRightOf="@id/iv_play_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_muisic_detail_name_marginleft"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/item_muisic_detail_name_textsize"/>

        <TextView
            android:id="@+id/tv_play_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/item_muisic_detail_user_textsize"
            android:textColor="@color/black"
            android:layout_alignLeft="@id/tv_play_name"
            android:layout_alignBottom="@id/iv_play_img"/>
    </RelativeLayout>

</LinearLayout>
