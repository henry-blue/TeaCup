<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <WebView
        android:id="@+id/movie_base_webView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <hb.xvideoplayer.MxVideoPlayerWidget
        android:id="@+id/movie_video_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_movie_play_mvpw_height" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/movie_srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/movie_video_player"
        android:layout_marginTop="@dimen/layout_movie_play_srl_marginTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_depend_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_movie_play_depend_tv_margin"
                android:text="@string/related_recommend"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/layout_movie_play_depend_tv_textSize"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_base_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_movie_play_depend_rv_marginLeft" />
        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>