<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:elevation="1dp"
    android:orientation="vertical"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/list_item_collect_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是标题"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_collect_title"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_item_collect_img"
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/header"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/list_item_collect_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="3"
            android:layout_marginLeft="8dp"
            android:text="rgrgtwert\nfwererw\nfsdgfasg"
            android:textColor="@color/deep_gray"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/list_item_collect_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:text="hdfsfgsdf"
        android:maxLines="1" />

    <TextView
        android:id="@+id/list_item_collect_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="dfghdfsghsfdhg"
        android:maxLines="1" />

</RelativeLayout>