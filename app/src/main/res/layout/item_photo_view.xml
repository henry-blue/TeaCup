<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_photo_view_height"
    android:layout_margin="@dimen/item_photo_view_margin"
    app:cardElevation="@dimen/item_find_fragment_cardElevation">

    <ImageView
        android:id="@+id/iv_photo"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/item_photo_view_img_margin"
        android:layout_height="@dimen/item_photo_view_img_height" />

    <TextView
        android:id="@+id/tv_photo_title"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="@dimen/item_photo_view_title_height"
        android:textSize="@dimen/item_photo_view_title_tiexSize"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/item_photo_view_title_marginLeft"
        android:layout_marginRight="@dimen/item_photo_view_title_marginRight"
        android:textColor="@color/gray"/>

</android.support.v7.widget.CardView>