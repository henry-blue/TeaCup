<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="198dp"
    android:background="@color/white"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_collect_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_below="@id/item_collect_title"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_collect_img"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/item_collect_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="5"
            android:layout_marginLeft="8dp"
            android:textColor="@color/deep_gray"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_collect_come"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:maxLines="1" />

    <TextView
        android:id="@+id/item_collect_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:maxLines="1" />

</RelativeLayout>