<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_read_collection_height"
    android:layout_marginBottom="@dimen/item_read_collection_marginBottom"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_collect_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_read_collection_title_margin"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/item_read_collection_title_textSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_read_collection_ll_height"
        android:layout_below="@id/item_collect_title"
        android:layout_marginRight="@dimen/item_read_collection_ll_marginRight"
        android:layout_marginTop="@dimen/item_read_collection_ll_marginTop"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_collect_img"
            android:layout_width="@dimen/item_read_collection_iv_width"
            android:layout_height="@dimen/item_read_collection_iv_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/item_read_collection_iv_marginLeft"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_collect_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/item_read_collection_tv_marginLeft"
            android:maxLines="5"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/item_read_collection_tv_textSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_collect_come"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/item_read_collection_tv_come_marginBottom"
        android:layout_marginLeft="@dimen/item_read_collection_tv_come_marginLeft"
        android:maxLines="1"
        android:textColor="@color/gray"
        android:textSize="@dimen/item_read_collection_tv_come_textSize" />

    <TextView
        android:id="@+id/item_collect_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/item_read_collection_tv_detail_marginBottom"
        android:layout_marginRight="@dimen/item_read_collection_tv_detail_marginRight"
        android:maxLines="1"
        android:textColor="@color/gray"
        android:textSize="@dimen/item_read_collection_tv_detail_textSize" />

</RelativeLayout>