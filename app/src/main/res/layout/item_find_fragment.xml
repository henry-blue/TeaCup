<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_find_fragment_marginbottom"
    android:layout_marginLeft="@dimen/item_find_fragment_marginleft"
    android:layout_marginRight="@dimen/item_find_fragment_marginright"
    android:layout_marginTop="@dimen/item_find_fragment_margintop"
    app:cardCornerRadius="@dimen/item_find_fragment_cardCornerRadius"
    app:cardElevation="@dimen/item_find_fragment_cardElevation">

    <LinearLayout
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_book_img"
            android:layout_width="@dimen/item_find_fragment_imageview_width"
            android:layout_height="@dimen/item_find_fragment_imageview_height"
            android:layout_margin="@dimen/item_find_fragment_imageview_margin"
            android:scaleType="fitXY"
            android:src="@drawable/book_bg"
            android:transitionName="@string/transition_book_img"
            tools:targetApi="lollipop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_find_fragment_layout_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black"
                android:textSize="@dimen/item_find_fragment_book_title_textsize" />

            <TextView
                android:id="@+id/tv_book_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_find_fragment_book_content_margintop"
                android:lineSpacingExtra="@dimen/item_find_fragment_lineSpacingExtra"
                android:textColor="@color/gray"
                android:textSize="@dimen/item_find_fragment_book_content_textsize" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
