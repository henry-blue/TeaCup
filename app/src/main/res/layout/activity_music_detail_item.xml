<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_music_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/deep_gray"
        android:layout_marginTop="@dimen/muisic_detail_title_margintop"
        android:layout_marginLeft="@dimen/muisic_detail_title_marginleft"
        android:textSize="@dimen/muisic_detail_title_textsize"/>

    <TextView
        android:id="@+id/tv_music_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/muisic_detail_type_marginleft"
        android:layout_marginTop="@dimen/muisic_detail_type_margintop"
        android:textSize="@dimen/muisic_detail_type_textsize"
        android:textColor="@color/gray"/>

    <com.app.teacup.ui.MoreTextView
        android:id="@+id/tv_music_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textColor="@color/black"
        app:textSize="@dimen/muisic_detail_content_textsize"
        app:desc_textSize="@dimen/muisic_detail_content_textsize"
        app:desc_textColor="?attr/appBg"
        android:layout_margin="@dimen/muisic_detail_content_margin" />

    <TextView
        android:id="@+id/tv_music_total"
        android:layout_width="match_parent"
        android:layout_height="@dimen/muisic_detail_total_height"
        android:textSize="@dimen/muisic_detail_total_textsize"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/muisic_detail_total_margintop"
        android:alpha="0.3"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/ll_play_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>