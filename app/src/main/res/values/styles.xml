        <item name="android:windowAnimationStyle">@style/default_animation</item>
    </style>

    <style name="MenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">?attr/appBg</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
    </style>

    <style name="FlashTheme" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="weacher_weather">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
