<resources>

    <style name="default_animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_stay</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_out</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
        <item name="appBg">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/default_animation</item>
    </style>

    <style name="greenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGreenDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
        <item name="appBg">@color/colorGreen</item>
        <item name="android:windowAnimationStyle">@style/default_animation</item>
    </style>

    <style name="pinkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPink</item>
        <item name="colorPrimaryDark">@color/colorPinkDark</item>
        <item name="colorAccent">@color/pinkAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
        <item name="appBg">@color/colorPink</item>
