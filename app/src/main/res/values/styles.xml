    </style>

    <style name="grayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryDark">@color/colorGrayDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
        <item name="appBg">@color/colorGray</item>
        <item name="android:windowAnimationStyle">@style/default_animation</item>
    </style>

    <style name="tealTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorTeal</item>
        <item name="colorPrimaryDark">@color/colorTealDark</item>
        <item name="colorAccent">@color/deepYellow</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
        <item name="appBg">@color/colorTeal</item>
