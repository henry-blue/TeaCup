<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_news_view_cardView_height"
    android:layout_margin="@dimen/item_news_view_cardView_margin"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardElevation="@dimen/item_news_view_elevation" >

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/item_news_view_rl_marginRight"
        android:layout_height="@dimen/item_news_view_rl_height">

        <ImageView
            android:id="@+id/iv_news_img"
            android:layout_width="@dimen/item_news_view_rl_iv_width"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_news_view_rl_tv_marginLeft"
            android:layout_marginTop="@dimen/item_news_view_rl_tv_marginTop"
            android:textColor="@color/black"
            android:textSize="@dimen/item_news_view_rl_tv_textSize"
            android:layout_toRightOf="@id/iv_news_img" />

        <TextView
            android:id="@+id/tv_news_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/item_news_view_rl_tv_label_textSize"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/item_news_view_rl_tv_label_marginBottom"
            android:maxLines="3"
            android:layout_alignLeft="@id/tv_news_title"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>